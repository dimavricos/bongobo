{{#ifHome this.params.route '/' }} 
<div class="home">
  <div class="container"> 
    <div class="col-md-4">
      <div class='follow-us'>

        <span><a href="https://www.facebook.com/bongobomusic/" target="_blank"><i class="fa fa-facebook" aria-hidden="true"></i></a></span>
        <span><a href="https://www.youtube.com/channel/UCffWXToLP4-3qhc9r0s974A" target="_blank"><i class="fa fa-youtube" aria-hidden="true"></i></a></span>
        <span><a href="https://plus.google.com/b/101779017848763333417/101779017848763333417/about/p/pub" target="_blank"><i class="fa fa-google-plus" aria-hidden="true"></i></a></span>
      </div>
    </div>
    <div class="col-md-4 logo">
     <a href="http://www.bongobo.com/"><img src="images/logo.png" alt="bongobo"></a> 
   </div>

   <div class="col-md-4">
    <div class="row">
     {{view "my_stations/open_my_stations"}}
   </div>
 </div>

 <h1 class="hero-message">Welcome to <b>Bongobo</b> your new <u>free internet radio</u> with zero audio ads</h1>
 <div class="hero-search">{{view "search/tracks_playlists"}}</div> 
 <div class="find-from-list">
  <span>or</span>
  <button>Find from our list <i class="fa fa-angle-down" aria-hidden="true"></i></button>
</div>

</div>
</div> 

{{else}}
<div class="dark-bg header"> 
  <div class="container">
   <div class="col-md-1">
    <div class="row logo">
      <div><a href="http://www.bongobo.com/"><img src="images/logo.png" alt="bongobo"></a></div> 
    </div>
  </div>

  <div class="col-md-9 search-container"> 
    <div class="row">{{view "search/tracks_playlists"}}</div>  
  </div> 
  <div class="col-md-2">
    <div class="row">
     {{view "my_stations/open_my_stations"}}
   </div>
 </div>
</div> 

</div>



{{/ifHome}}



